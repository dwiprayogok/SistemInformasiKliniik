<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cvItemSentraMitraTepat"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:background="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/label_tv_nama_pasien"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pasien"
            android:textSize="14sp"
            android:lineSpacingExtra="10sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            />


        <TextView
            android:id="@+id/value_nama_pasien"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/label_tv_nama_pasien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value Pasien"
            android:textSize="14sp"
            android:lineSpacingExtra="10sp"
            android:textStyle="normal"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>