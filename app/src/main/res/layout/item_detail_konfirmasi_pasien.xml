<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cvItemSentraMitraTepat"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:background="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/value_tv_nama_pasien"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pasien"
            android:textSize="20sp"
            android:lineSpacingExtra="10sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/value_tv_nama_pelayanan"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/value_tv_nama_pasien"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pelayanan"
            android:textSize="14sp"
            android:lineSpacingExtra="10sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            />



        <TextView
            android:id="@+id/value_tv_nama_dokter"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/value_tv_nama_pelayanan"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Dokter"
            android:textSize="14sp"
            android:lineSpacingExtra="10sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            />


        <TextView
            android:id="@+id/value_tv_tanggal"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/value_tv_nama_dokter"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Berobat"
            android:textSize="14sp"
            android:lineSpacingExtra="10sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/value_tv_waktu_berobat"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/value_tv_tanggal"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu Berobat"
            android:textSize="14sp"
            android:lineSpacingExtra="10sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/imgApprove"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_accept_btn"/>


        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/imgRefused"
            card_view:layout_constraintTop_toBottomOf="@id/imgApprove"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/reject_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>