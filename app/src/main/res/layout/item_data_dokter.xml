<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cvItemSentraMitraTepat"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:background="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/label_tv_nik_dokter"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIK Dokter"
            android:textSize="14sp"
            android:lineSpacingExtra="10sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            />


        <TextView
            android:id="@+id/value_tv_nik_dokter"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/label_tv_nik_dokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIK Dokter"
            android:textSize="14sp"
            android:lineSpacingExtra="10sp"
            android:textStyle="normal"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/label_tv_nama_dokter"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/label_tv_nik_dokter"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Dokter"
            android:textSize="14sp"
            android:lineSpacingExtra="10sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/value_tv_nama_dokter"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/value_tv_nik_dokter"
            card_view:layout_constraintStart_toStartOf="@id/value_tv_nik_dokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIK Dokter"
            android:textSize="14sp"
            android:lineSpacingExtra="10sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            />


        <TextView
            android:id="@+id/label_tv_ho_hp_dokter"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/label_tv_nama_dokter"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Hp Dokter"
            android:textSize="14sp"
            android:lineSpacingExtra="10sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/value_tv_ho_hp_dokter"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/value_tv_nama_dokter"
            card_view:layout_constraintStart_toStartOf="@id/value_tv_nik_dokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIK Dokter"
            android:textSize="14sp"
            android:lineSpacingExtra="10sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/label_tv_alamat_dokter"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/label_tv_ho_hp_dokter"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat Dokter"
            android:textSize="14sp"
            android:lineSpacingExtra="10sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            />


        <TextView
            android:id="@+id/value_tv_alamat_dokter"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/value_tv_ho_hp_dokter"
            card_view:layout_constraintStart_toStartOf="@id/value_tv_nik_dokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIK Dokter"
            android:textSize="14sp"
            android:lineSpacingExtra="10sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            />


        <ImageView
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:id="@+id/overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_overflow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>