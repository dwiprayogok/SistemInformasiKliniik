<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/colorLight0"/>
                    <corners android:radius="8dp" />
                    <stroke android:width="2dp" android:color="@color/orange" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="false" >
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/colorDisabled"/>
                    <corners android:radius="8dp" />
                    <stroke android:width="2dp" android:color="@color/colorDark1" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/colorLight0"/>
                    <corners android:radius="8dp" />
                    <stroke android:width="2dp" android:color="@color/colorLight3" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>